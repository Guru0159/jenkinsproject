pipeline{
    agent any

    environment{
        PATH="/opt/maven/bin:$PATH"

    }
    stages{
        stage("welcome "){
            steps{
                echo "welcome to jenkins declarative "
            }
        }
        stage ("getcode") {
            steps{
                git 'https://github.com/Guru0159/jenkinsproject.git'
            }

        }
        stage ("build maven"){
            steps {
                 sh "mvn clean package"
            }
        }
    }
}
